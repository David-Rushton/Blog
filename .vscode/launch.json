{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Blog.Generator",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/blog.generator/bin/Debug/netcoreapp3.1/blog.generator.dll",
            "args": [
                "--version-number", "0.0.0-dev:abcdefg",
                "--blog-root", "${workspaceFolder}/src/blog",
                "--template-root", "${workspaceFolder}/src/blog.template",
                "--articles-source-root", "${workspaceFolder}/src/blog.articles",
                "--articles-target-root", "${workspaceFolder}/src/blog/blog.articles",
                "--release-notes-path", "${workspaceFolder}/release-notes.md",
                "--new-badge-cutoff-in-days", "10"
            ],
            "cwd": "${workspaceFolder}/src/blog.generator",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "PowerShell: Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${file}",
            "args": [
                "-verbose",
                "-debug"
            ]
        },
        {
            "name": "Attach to Node Functions",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "preLaunchTask": "func: host start"
        }
    ]
}
